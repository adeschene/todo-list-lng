<%= form_with model: item do |form| %>

  <div class="form-group mb-3">
    <%= form.text_field :title, class: "form-control mb-1", placeholder: "Title" %>
    <%= form.text_area :description, class: "form-control mb-2", placeholder: "Description", rows: "5" %>
    <div class="input-group mb-2">
      <span class="input-group-text">Due Date: </span>
      <%= form.date_field :due_date, class: "form-control", value: "#{Date.tomorrow}" %>
      <%= form.hidden_field :archived, :value => false %>
    </div>
  </div>

  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>

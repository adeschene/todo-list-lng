<%= form_with model: [@item, @item.notes.build] do |form| %>

  <div class="form-group h-100 mb-3">
    <%= form.text_area :body, class: "form-control", placeholder: "Body", rows: "5" %>
  </div>
  <div class="form-group text-center">
    <%= form.submit "Submit", class: "btn btn-sm btn-warning" %>
  </div>

<% end %>
